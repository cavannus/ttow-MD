<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheTaleOfWayang" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryVariant">@color/ColorPrimaryDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_theme</item>
        <item name="colorSecondaryVariant">@color/app_theme_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Font-->
        <item name="android:fontFamily">@font/poppins</item>
    </style>

     <style name="NavBarTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.TheTaleOfWayang.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.TheTaleOfWayang.NoActionBar">
        <item name="android:windowBackground">@color/ColorPrimary</item>
    </style>

    <style name="FragmentHome" parent="Theme.TheTaleOfWayang.NoActionBar">
        <item name="android:windowBackground">@color/light_grey</item>
    </style>

    <style name="LayoutHome" parent="Theme.TheTaleOfWayang.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="Theme.TheTaleOfWayang.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TheTaleOfWayang.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>